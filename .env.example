# Docker Image Configuration (for docker-compose.yaml)
DOCKER_REGISTRY_HOST=ghcr.io
DOCKER_IMAGE_NAME=ib-bsb-br/LightRAG
IMAGE_TAG=latest

# Database Credentials
POSTGRES_USER=lightrag_user
POSTGRES_PASSWORD=my_very_strong_postgres_password_here
POSTGRES_DB=lightrag_db
NEO4J_PASSWORD=my_very_strong_neo4j_password_here

# OpenAI API Configuration
OPENAI_API_KEY=sk-my_OPENAI_API_KEY_HERE
OPENAI_API_BASE=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536

# LightRAG Application Authentication & Settings
AUTH_ACCOUNTS=admin:AnotherStrongPassword123!
TOKEN_SECRET=GenerateARandomSecureStringForThisToken!DoNotUseThisDefault!
TOKEN_EXPIRE_HOURS=4
TIMEOUT=300
LOG_LEVEL=INFO
ENABLE_LLM_CACHE_FOR_EXTRACT=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WEBUI_TITLE='My Graph KB'
WEBUI_DESCRIPTION="Simple and Fast Graph Based RAG System"

# Optional Login Configuration
# AUTH_ACCOUNTS='admin:admin123,user1:pass456'
# TOKEN_SECRET=Your-Key-For-LightRAG-API-Server
